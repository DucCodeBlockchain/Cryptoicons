{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Scripts",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v17.1.0/bin/node",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/transpile-only"
            ],
            "args": ["bin/index.ts"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "node_modules/**"]
        }
    ]
}
